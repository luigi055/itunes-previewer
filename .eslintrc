{
  "extends": ["prettier", "prettier/react", "react-app"],
  "plugins": ["prettier", "@typescript-eslint", "import", "jest"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "new-cap": [
      2,
      {
        "capIsNewExceptions": ["Map", "List", "IMaskMixin"]
      }
    ],
    "react/jsx-filename-extension": [1, { "extensions": [".tsx"] }],
    "@typescript-eslint/no-use-before-define": "off",
    "no-console": 0,
    "arrow-parens": 0,
    "default-case": 2,
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "linebreak-style": "off",
    "CssSyntaxError": 0,
    "camelcase": 0,
    "spaced-comment": ["error", "always", { "markers": ["/"] }],
    "max-lines": 2,
    "require-await": 2,
    "semi": 2,
    "jest/no-disabled-tests": 2,
    "jest/no-focused-tests": 2,
    "jest/no-identical-title": 2,
    "prefer-spread": 2,
    "prefer-object-spread": 2,
    "no-await-in-loop": 2,
    "no-duplicate-imports": 2,
    "no-empty": 2,
    "no-nested-ternary": 2,
    "no-unused-vars": 2,
    "vars-on-top": 2
  },
  "overrides": [
    {
      "files": ["*.test.*", "*.mock.*", "*.spec.*"],
      "rules": {
        "max-lines": "off"
      }
    },
    {
      "files": ["*.ts"],
      "rules": {
        "semi": "off"
      }
    }
  ],
  "settings": {
    "import/extensions": [".ts", ".tsx", ".json"],
    "import/resolver": {
      "typescript": {}
    }
  }
}
